= form_for @card do |f|
  -if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :word
    = f.text_field :word
  .field
    = f.label :mean
    = f.text_area :mean, :rows => 3
  .actions
    = f.submit 'Save'
