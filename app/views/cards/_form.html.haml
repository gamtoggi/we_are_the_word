= form_for @card do |f|
  -if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :word, :placeholder => "단어를 입력하세요"
  .field
    = f.text_area :mean, :rows => 6, :placeholder => "뜻을 입력하세요"
  .actions
    = f.submit 'Save'     
  
  %hr
  
  .form-destroy
    =link_to "삭제하시려면 여기를 누르세요.", @card, :method => "delete", :confirm => "정말로 삭제합니까?"
