- content_for :head do
  :javascript   
    $(document).ready(function(){
      $(".content").hide();
      $(".word").click(function(){
        $(this).siblings(".content").slideToggle("fast");
      });
    });   

.header
  .top
    %h4.title We are the word
    .add= link_to "Add", new_card_path, :class => "button"
    .search.button= link_to "Search", "#", :class => "button"
  .tabs


         
%nav.menu  
  %ul.tabs
    %li.tab= link_to "Today", cards_path
    %li.tab= link_to "Remind", cards_path(tab: 'week')


.cards
  - @cards.each do |card|
    .card[card]
      .word= card.word
      .content
        .mean= card.mean
        .controll
          = link_to 'Edit', edit_card_path(card)
          = link_to 'Destroy', card, :confirm => 'Are you sure?', :method => :delete

= paginate @cards        


